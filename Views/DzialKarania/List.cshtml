@model DzialWrapper
@{
    ViewData["Title"] = @Model.List.Id;
}

<div class="panel panel-info">
    <div class="panel-heading text-center">
        <h2>List</h2>
    </div>

    <div>
        <h3 class="text-center"><strong>Tytul:</strong></h3>
        <p class="text-center">@Model.List.Title</p>

        <h3 class="text-center"><strong>Zgłoszony gracz</strong></h3>
        <p class="text-center">@Model.List.GraczName</p>

        <h3 class="text-center"><strong>Opis</strong></h3>
        <p class="text-center">@Model.List.Opis</p>

        <h3 class="text-center"><strong>Kategoria</strong></h3>
            @switch ((int) @Model.List.Kategoria)
                    {
                        case 0: <p class="text-center">Pytanie ogólne</p>; break;
                        case 1: <p class="text-center">Pytanie techniczne</p>; break;
                        case 2: <p class="text-center">Zgłoszenie gracza</p>; break;
                    }
    </div>

    <div class="panel-body">
        <form asp-action="Niepowazny" methid="post">
            <input type="hidden" name="id" value=@Model.List.Id />
            <div class="text-center">
                <button class="btn btn-danger" type="submit">Odrzuć list</button>
            </div>
        </form>
    </div>

    <div class="panel-body">
        <form asp-action="Decyzja" method="post">
            <div class="row">
                <div class="col-md-6"></div>
                <div class="col-md-2">
                    <div class="form-check radio">
                        <input class="form-check-input" type="radio" asp-for=@Model.Rezultat value="Winny" />Winny                        
                    </div>
                    <div class="form-check radio">
                        <input class="form-check-input" type="radio" asp-for=@Model.Rezultat value="Niewinny" />Niewinny                        
                    </div>
                </div>
                <div class="col-md-6"></div>
            </div>
            <div class="text-center">
                <input type="hidden" asp-for=@Model.List.Id value=@Model.List.Id />
                <input class="btn btn-info" type="submit" />
            </div>
        </form>
    </div>
</div>